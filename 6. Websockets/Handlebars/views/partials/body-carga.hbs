<div id="marco" class="center">
    <h1>{{mensaje}}</h1>
    <form id="formAgregarProducto" action="http://localhost:8080/productos" method ="post">
        <div class="form-group">
            <input type="text" class="form-control" name="title" required="required">
            <span>producto</span>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="price" required="required">
            <span>precio</span>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="thumbnail" required="required">
            <span>url imagen</span>
        </div>
        <div class="form-group buttons">
            <button type="submit" class="btn btn-primary">Agregar</button>
            {{!-- <a href="/productos" class="btn btn-primary">Ver Productos</a> --}}
        </div>
    </form>
    <br>
    <hr>
    <div id="listaProductos"></div>
    <hr>
    <h1>Comentarios</h1>
    <div>
        <div class="form-group">
            <input id="inputAutor" class="form-control" type="text" placeholder="nombre" required="required">
        </div>
        <div class="form-group">
            <input id="inputMensaje" class="form-control" type="text" placeholder="mensaje" required="required">
        </div>
        <div class="form-group buttons">
            <button id="botonEnviar" class="btn btn-primary">Enviar</button>
        </div>
    </div>
    <div id="listaMensajes"></div>
</div>
<script src="/js/index.js"></script>
